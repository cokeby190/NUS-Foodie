<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomWindowTitleBackground">
        <item name="android:background">#002357</item>
    </style>
 
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rice_rating_draw</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>
    
    <style name="store_textSize" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="store_tablepad" parent="@android:style/TextAppearance">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    
</resources>