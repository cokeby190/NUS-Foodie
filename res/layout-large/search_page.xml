<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" > -->
    
    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!-- ======================= SEARCH TAB START ================================ -->
                <LinearLayout
                    android:id="@+id/search_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="Search : "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/search_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignRight="@+id/search_button"
                            android:layout_marginLeft="18dp"
                            android:ems="10"
                            android:hint="Search for food! (:" >

                            <requestFocus />
                        </AutoCompleteTextView>

                        <ImageButton
                            android:id="@+id/search_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/search_bar"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/search" />
                        
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="30dp"
                            android:text=" Location-based?" />
                    </RelativeLayout>
                </LinearLayout>
                
                <!-- ======================= SEARCH TAB END ================================ -->

				<!-- ======================= ADVANCED SEARCH TAB START ================================ -->

                <LinearLayout
                    android:id="@+id/adv_search_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
				        android:layout_width="match_parent"
				        android:layout_height="100dp"
				        android:paddingRight="10dp"
				        android:paddingTop="10dp" >
				
				        <TextView
				            android:id="@+id/search_label"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_alignParentTop="true"
				            android:paddingTop="10dp"
				            android:paddingBottom="10dp"
				            android:paddingLeft="20dp"
				            android:textSize="20sp"
				            android:textStyle="bold"
				            android:text="Search : " />
				
				        <AutoCompleteTextView
				            android:id="@+id/adv_search_bar"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentBottom="true"
				            android:layout_alignParentLeft="true"
				            android:layout_alignRight="@+id/imageButton1"
				            android:layout_marginLeft="18dp"
				            android:ems="10"
				            android:hint="Search for food! (:" />
				
				        <ImageButton
				            android:id="@+id/adv_search_button"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentRight="true"
				            android:layout_alignTop="@+id/search_bar"
				            android:layout_marginRight="16dp"
				            android:src="@drawable/search" />
				        
				    </RelativeLayout>
				
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:paddingBottom="20dp"
				        android:paddingLeft="40dp" 
				        android:paddingRight="20dp">
				        
				        <TextView
				            android:id="@+id/filter_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:paddingTop="10dp"
				            android:textSize="15sp"
				            android:textStyle="bold"
				            android:text="Filters : " />
				
				        <RelativeLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content" >
				
				            <CheckBox
				                android:id="@+id/halal_checkbox"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_alignParentLeft="true"
				                android:layout_alignParentTop="true"
				                android:text="Halal" />
				
				            <CheckBox
				                android:id="@+id/aircon_checkbox"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_alignParentRight="true"
				                android:layout_alignParentTop="true"
				                android:text="Air-conditioned" />
				
				        </RelativeLayout>
				        
				        <TextView
				            android:id="@+id/faculty_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:paddingTop="10dp"
				            android:textSize="15sp"
				            android:text="Faculty : " />
				
				        <Spinner
				            android:id="@+id/spinner1"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content" />
				        
				        <TextView
				            android:id="@+id/store_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="15sp"
				            android:text="Store Type : " />
				        
				        <Spinner
				            android:id="@+id/spinner2"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content" />
				        
				        <TextView
				            android:id="@+id/cuisine_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="15sp"
				            android:text="Cuisine : " />
				
				        <Spinner
				            android:id="@+id/spinner3"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content" />
				
				    </LinearLayout>
                </LinearLayout>
                
                <!-- ======================= ADVANCED SEARCH TAB END ================================ -->

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>